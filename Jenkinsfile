pipeline {
    agent any

    stages {
        

        stage('Checkout') {
            steps {
                deleteDir()
                sh 'echo cloning repo'
                sh 'git clone https://github.com/mvnbharath/challenge5.git' 
            }
        }
        
        #!/bin/bash

read -p "Do you want to trigger the script? (yes/no): " choice

if [[ "$choice" == "yes" ]]; then
    echo "Manual trigger is working!"
else
    echo "Trigger canceled."
fi

                    }
                }
            }
        }
    }
} 
